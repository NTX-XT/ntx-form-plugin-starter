{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "target": "ES2020",
    "module": "es2020",
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "outDir": "dist",
    "declaration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["**/dist", "**/server", "**/docs", "**/packages"]
}